{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "newLine": "lf",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "noImplicitAny": false,
    "rootDir": "./src/",
    "outDir": "./dist-node"
  },
  "include": [
    "./src/**/*"
  ]
}
